{
  "name": "delivery-network-backend",
  "version": "1.0.0",
  "description": "Backend API server for Centralized Delivery Network",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "chmod +x node_modules/.bin/prisma 2>/dev/null || true && npx prisma generate && tsc",
    "start": "node dist/server.js",
    "prestart": "chmod +x node_modules/.bin/prisma 2>/dev/null || true && echo 'Running migrations before server start...' && npx prisma migrate deploy || echo 'Migration failed, continuing anyway...'",
    "postinstall": "npx prisma generate || echo 'Prisma generate failed, will retry during build'",
    "build:render": "npm run build && chmod +x node_modules/.bin/prisma",
    "prisma:generate": "npx prisma generate",
    "prisma:migrate": "npx prisma migrate dev",
    "prisma:migrate:deploy": "npx prisma migrate deploy",
    "prisma:studio": "npx prisma studio",
    "prisma:seed": "ts-node prisma/seed.ts",
    "test:assignment": "ts-node src/scripts/test-assignment.ts"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.1.0",
    "@types/multer": "^2.0.0",
    "axios": "^1.13.2",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "firebase-admin": "^13.6.0",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "prisma": "^6.1.0",
    "socket.io": "^4.8.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.0",
    "nodemon": "^3.0.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
